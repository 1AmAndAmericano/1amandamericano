    <br>
    <table id="rev_list">
        <tr>
            <th>ResvID </th>
            <th>Email </th>
            <th>RoomNumber </th>
            <th>CheckinDate </th>
            <th>CheckoutDate </th>
            <th>Price </th>
            <th>RoomType </th>
        </tr>
    </table>
     <!-- ***********INSERT_REFUND_ACCOUNT*********** -->
     <form action="/rooms_search" method="post">
        <table>
            <td>
            Bank : <input type="string" name="bank"/><br>
            </td>
            <td>
            Account : <input type="number" name="account"/><br>
            </td>
        </table>
     <button type="button">CONFIRM</button>
     </form>
     <script>
     var table = document.getElementById("rev_list");
     var data = '<%- data %>';
     var row;
     var cell0, cell1, cell2, cell3, cell4, cell5, cell6;
     var d;
     console.log("data lenth:"+data.length);
     for(var i=0; i < data.length; i++){
             d = data[i];
             console.log(data[i]);
             row = table.insertRow(-1);
             cell0 = row.insertCell(0);
             cell1 = row.insertCell(1);
             cell2 = row.insertCell(2);
             cell3 = row.insertCell(3);
             cell4 = row.insertCell(4);
             cell5 = row.insertCell(5);
             cell6= row.insertCell(6);
             cell0.innerHTML = d.ResvID;
             cell1.innerHTML = d.Email;
             cell2.innerHTML = d.RoomNumber;
             cell3.innerHTML = d.CheckinDate;
             cell4.innerHTML = d.CheckoutDate;
             cell5.innerHTML = d.Price;
             cell6.innerHTML = d.RoomType;
     }
    </script>
</body>
</html>
